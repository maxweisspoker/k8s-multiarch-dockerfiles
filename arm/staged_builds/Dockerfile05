# Platform:  linux/arm/v6

FROM localhost:5000/armstage04

ENV GOOS=linux
ENV GOARCH=arm
ENV GOARM=6
ENV LDFLAGS='-d -s -w -linkmode=external -extldflags="-static" -static -static-libgcc'
ENV CGO_ENABLED=0
ENV GOFLAGS=""

RUN cd /go/src/k8s.io/kubernetes/ && make WHAT=cmd/kube-controller-manager

WORKDIR /go/
CMD /bin/bash

